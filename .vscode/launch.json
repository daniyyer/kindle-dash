{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI (Hot Reload)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/server",
            "preLaunchTask": "kill-port-8000",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload",
                "--reload-dir",
                ".",
                "--reload-include",
                "*.html"
            ],
            "jinja": true,
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "."
            },
            "windows": {
                "python": "${workspaceFolder}/.venv/Scripts/python.exe"
            },
            "linux": {
                "python": "${workspaceFolder}/.venv/bin/python"
            },
            "osx": {
                "python": "${workspaceFolder}/.venv/bin/python"
            }
        }
    ]
}